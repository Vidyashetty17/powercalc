{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Backend (Maven)",
      "type": "shell",
      "command": "mvn -f \"${workspaceFolder}/powercalc-backend\" clean package -DskipTests",
      "group": "build",
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    },
    {
      "label": "Run Backend (jar)",
      "type": "shell",
      "command": "java -jar \"${workspaceFolder}/powercalc-backend/target/powercalc-backend-0.0.1-SNAPSHOT.jar\"",
      "presentation": { "reveal": "always", "panel": "new" },
      "problemMatcher": []
    },
    {
      "label": "Stop Backend (kill jar)",
      "type": "shell",
      "command": "powershell -NoProfile -Command \"Get-CimInstance Win32_Process | Where-Object { $_.CommandLine -and $_.CommandLine -like '*powercalc-backend-0.0.1-SNAPSHOT.jar*' } | ForEach-Object { Stop-Process -Id $_.ProcessId -Force }\"",
      "presentation": { "reveal": "always" },
      "problemMatcher": []
    }
  ]
}
